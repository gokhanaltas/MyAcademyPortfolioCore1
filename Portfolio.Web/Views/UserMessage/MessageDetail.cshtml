@model UserMessage
@{
    ViewData["Title"] = "Mesaj Detay";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="UserMessageId" />

    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Mesaj Detayı</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mesaj Bilgileri</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Gönderen: <b>@Model.Name</b>
                                <br />
                                Email: <b>@Model.Email</b>
                                <br />
                                Tarih: <b>@Model.SendDate</b>
                                <br /><br />
                                Mesaj: <b>@Model.MessageDetail</b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-dark">Çıkış Yap</button>
</form>
