@model List<SocialMedia>
@{
    ViewData["Title"] = "Sosyal Medya";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<style>
    /* Sil Butonu - Premium Kırmızı Gradient */
    .btn-premium-danger {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: #fff;
        border: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    .btn-premium-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        background: linear-gradient(135deg, #ff4b2b, #ff416c);
    }

    /* Güncelle Butonu - Premium Mavi Gradient */
    .btn-premium-info {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    .btn-premium-info:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        background: linear-gradient(135deg, #2575fc, #6a11cb);
    }

    /* Yeni Sosyal Medya Butonu */
    .btn-new-social {
        background: linear-gradient(135deg, #43cea2, #185a9d);
        color: #fff;
        border: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    .btn-new-social:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
        background: linear-gradient(135deg, #185a9d, #43cea2);
    }
</style>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İkon</th>
        <th>Link</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><i class="@item.Icon"></i></td>
            <td>@item.Link</td>
            <td>
                <a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-premium-danger mb-1">Sil</a>
                <a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID" class="btn btn-premium-info">Güncelle</a>
            </td>
        </tr>
    }

</table>

<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-new-social mt-3">Yeni Sosyal Medya Oluştur</a>
