@model List<Category>
@*
   Default Projects
*@

<section id="portfolio" class="portfolio section">

    <!-- Section Title -->
    <div class="container section-title text-center" data-aos="fade-up">
        <h2>Projelerim</h2>
        <p>Geliştirdiğim projelerime göz atabilirsiniz.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <ul class="portfolio-filters isotope-filters d-flex justify-content-center flex-wrap mb-4" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">Tümü</li>
                @foreach (var category in Model)
                {
                    <li data-filter=".filter-@category.CategoryId">@category.CategoryName</li>
                }
            </ul><!-- End Portfolio Filters -->

            <div class="row justify-content-center gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var category in Model)
                {
                    @foreach (var project in category.Projects)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 portfolio-item isotope-item filter-@category.CategoryId d-flex justify-content-center">
                            <div class="card" style="width: 100%; max-width: 350px;">
                                <img src="@project.ImageUrl" class="card-img-top img-fluid" alt="">
                                <div class="card-body text-center">
                                    <h5 class="card-title">@project.ProjectName</h5>
                                    <p class="card-text">@project.Description</p>
                                    <a href="@project.ImageUrl" title="@project.ProjectName" data-gallery="portfolio-gallery-app" class="btn btn-outline-primary m-1"><i class="bi bi-zoom-in"></i></a>
                                    <a href="@project.GithubUrl" target="_blank" title="Github Linki" class="btn btn-outline-secondary m-1"><i class="bi bi-link-45deg"></i></a>
                                </div>
                            </div>
                        </div>
                
                        <!-- End Portfolio Item -->
                    }
                }
            </div><!-- End Portfolio Container -->

        </div>

    </div>

</section>
