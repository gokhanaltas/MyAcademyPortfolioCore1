@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<style>
    /* Tablo hover efekti */
    table.table tbody tr {
        transition: all 0.3s ease;
    }

        table.table tbody tr:hover {
            background: linear-gradient(90deg, #f0f0f0, #e0e0e0);
            transform: scale(1.01);
        }

    /* Sil Butonu - Premium Kırmızı Gradient + Hover */
    .btn-premium-danger {
        background: linear-gradient(135deg, #ff416c, #ff4b2b);
        color: #fff;
        border: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
    }

        .btn-premium-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
            background: linear-gradient(135deg, #ff4b2b, #ff416c);
        }

    /* Güncelle Butonu - Premium Mavi Gradient + Hover */
    .btn-premium-info {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        position: relative;
        overflow: hidden;
    }

        .btn-premium-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
            background: linear-gradient(135deg, #2575fc, #6a11cb);
        }

    /* Yeni Kategori Butonu */
    .btn-new-category {
        background: linear-gradient(135deg, #43cea2, #185a9d);
        color: #fff;
        border: none;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

        .btn-new-category:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
            background: linear-gradient(135deg, #185a9d, #43cea2);
        }
</style>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-premium-danger mb-1">Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-premium-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Category/CreateCategory" class="btn btn-new-category mt-3">Yeni Kategori Oluştur</a>
